import android.os.Bundle; import android.view.LayoutInflater;
import android.view.View; import android.view.ViewGroup;
import androidx.annotation.NonNull; import
androidx.annotation.Nullable; import androidx.fragment.app.Fragment;
public class DashboardFragment extends Fragment {
@Nullable
@Override
public View onCreateView(@NonNull LayoutInflater inflater, @Nullable ViewGroup
container, @Nullable Bundle savedInstanceState) { return
inflater.inflate(R.layout.fragment_dashboard, container, false);
} }
